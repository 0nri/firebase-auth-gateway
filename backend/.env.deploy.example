# Auth Gateway - Deployment Environment Variables
# Copy this file to .env.deploy and fill in your values

# Firebase/Google Cloud Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_APP_ID=your-firebase-app-id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Domain Validation
# Example: ^.+@yourdomain\.com$ to only allow emails from yourdomain.com
ALLOWED_EMAIL_DOMAIN_REGEX=.*

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://your-app.com,https://another-app.com

# Authentication Configuration
# Redirect URL after successful authentication (optional)
AUTH_REDIRECT_URL=https://your-app.com/auth-callback

# Gateway Public URL
# The publicly accessible base URL of the deployed Auth Gateway service (e.g., https://your-service-name-xxxx.a.run.app)
# This is required for constructing the correct OAuth callback URL.
GATEWAY_PUBLIC_URL=https://your-auth-gateway-url.a.run.app

# Application Configuration
# Log level for the application (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Environment setting (development, production)
ENVIRONMENT=production
